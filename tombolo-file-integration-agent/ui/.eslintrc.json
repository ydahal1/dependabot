{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["react-app", "prettier"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react", "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "warn",
            {
             "printWidth":   120,
             "trailingComma": "es5",
             "endOfLine": "auto",
             "semi": false,
             "jsxSingleQuote": true,
             "singleQuote" : true,
             "useTabs": true
            }
        ]
    }
}
